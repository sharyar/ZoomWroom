<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiderProfileEditActivity">
    <RelativeLayout
        android:id="@+id/check_close_layout"
        android:layout_width="match_parent"
        android:background="#A7A5C6"
        android:orientation="horizontal"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginLeft="12dp"
            android:layout_alignParentLeft="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_close">

            </ImageView>


        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:src="@drawable/ic_check">

            </ImageView>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@+id/check_close_layout"
        android:id="@+id/grad_layout"
        android:layout_width="match_parent"
        android:background="#A7A5C6"
        android:padding="20dp"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/circle_board_layout"
            android:layout_width="wrap_content"
            android:background="@drawable/circle_board"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="170dp"
                android:layout_height="171dp"
                android:adjustViewBounds="true"
                android:layout_margin="10dp"
                android:padding="3dp"
                android:background="@drawable/circle"
                android:scaleType="centerInside"
                android:src="@drawable/user" />



        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/circle_board_layout"
            android:text="Joey Baboey"
            android:layout_margin="15sp"
            android:textColor="@color/white"
            android:textSize="32dp"
            android:fontFamily="sans-serif-light"/>



    </RelativeLayout>

    <LinearLayout
        android:id="@+id/rating_layout"
        android:layout_below="@+id/grad_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">



    </LinearLayout>
    <LinearLayout
        android:layout_below="@+id/rating_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/headings"
                android:textSize="14sp"
                android:text="Email:"/>
            <EditText
                android:id="@+id/profile_email_edittext"
                android:layout_below="@+id/profile_email"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"
                android:text="275475610@qq.com"/>




        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/profile_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:text="Username:"
                android:textColor="@color/headings"
                android:textSize="14sp" />

            <EditText
                android:id="@+id/profile_username_edittext"
                android:layout_below="@+id/profile_username"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"
                android:text="Baijin tao"/>



        </RelativeLayout>


        <RelativeLayout
            android:layout_marginTop="5dp"
            android:layout_marginLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/profile_phonenum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/headings"
                android:textSize="14sp"
                android:text="Phone Number"/>
            <EditText
                android:layout_below="@+id/profile_phonenum"
                android:id="@+id/profile_phone_edittext"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="sans-serif-light"
                android:text="780 880 0000"/>



        </RelativeLayout>


    </LinearLayout>





</RelativeLayout>